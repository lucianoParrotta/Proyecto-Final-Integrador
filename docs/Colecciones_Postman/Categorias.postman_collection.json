{
  "info": {
    "name": "SGIG - Backend Auth + Categorías",
    "_postman_id": "sgig-backend-auth-categorias-001",
    "description": "Colección para probar autenticación (API Key + JWT) y el módulo de Categorías del backend SGIG.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "api_key",
      "value": "mi_api_key_segura"
    },
    {
      "key": "admin_user",
      "value": "admin"
    },
    {
      "key": "admin_password",
      "value": "admin123"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user\": \"{{admin_user}}\",\n  \"password\": \"{{admin_password}}\"\n}"
        },
        "description": "Login de administrador usando usuario y password definidos en .env. Devuelve un JWT."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let jsonData = {};",
              "try { jsonData = pm.response.json(); } catch (e) {}",
              "if (jsonData.token) {",
              "  pm.collectionVariables.set('token', jsonData.token);",
              "  console.log('Token guardado en variables de colección');",
              "} else { console.warn('No se encontró token en la respuesta'); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Perfil (/me)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/me",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Categorías - Listar",
      "request": {
        "method": "GET",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/categorias",
          "host": ["{{base_url}}"],
          "path": ["api", "categorias"]
        },
        "description": "Obtiene todas las categorías."
      }
    },
    {
      "name": "Categorías - Obtener por ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/categorias/1",
          "host": ["{{base_url}}"],
          "path": ["api", "categorias", "1"]
        }
      }
    },
    {
      "name": "Categorías - Crear",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/categorias",
          "host": ["{{base_url}}"],
          "path": ["api", "categorias"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Accesorios\",\n  \"descripcion\": \"Categoría de prueba creada desde Postman.\"\n}"
        },
        "description": "Crea una nueva categoría."
      }
    },
    {
      "name": "Categorías - Actualizar",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/categorias/1",
          "host": ["{{base_url}}"],
          "path": ["api", "categorias", "1"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Accesorios Editado\",\n  \"descripcion\": \"Categoría editada desde Postman.\"\n}"
        }
      }
    },
    {
      "name": "Categorías - Eliminar (DELETE lógico o físico según backend)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "x-api-key", "value": "{{api_key}}" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/categorias/1",
          "host": ["{{base_url}}"],
          "path": ["api", "categorias", "1"]
        }
      }
    }
  ]
}